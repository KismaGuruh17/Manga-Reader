<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Detail_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/accent_material_light"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageDetail"
                android:layout_width="130dp"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/onepiece" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/penulis"
                    android:textColor="@color/accent_material_light"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/lineAuthor"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/accent_material_light" />

                <TextView
                    android:id="@+id/textAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:maxLines="1"
                    android:text="Eiichiro Oda" />

                <TextView
                    android:id="@+id/titleGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/genre"
                    android:textColor="@color/accent_material_light"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/lineGenre"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/accent_material_light" />

                <TextView
                    android:id="@+id/textGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:maxLines="1"
                    android:text="Aksi, Petualangan, Fantasi" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/blockSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5ce1e6"
            android:padding="5dp"
            android:text="Synopsis"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sinopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="" />

    </LinearLayout>
</ScrollView>